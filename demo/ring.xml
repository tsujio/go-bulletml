<?xml version="1.0" ?>    
<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

    <!-- This sample uses nonstandard features ($direction) -->

    <bullet label="ring">
        <action>
            <repeat>
                <times>45</times>
                <action>
                    <fire>
                        <direction type="sequence">8</direction>
                        <speed>20</speed>
                        <bullet>
                            <action>
                                <wait>1</wait>
                                <changeSpeed>
                                    <term>1</term>
                                    <speed>3</speed>
                                </changeSpeed>
                                <changeDirection>
                                    <term>1</term>
                                    <direction type="absolute">$1</direction>
                                </changeDirection>
                            </action>
                        </bullet>
                    </fire>
                </action>
            </repeat>
            <vanish />
        </action>
    </bullet>
    <action label="top">
        <repeat>
            <times>999</times>
            <action>
                <changeDirection>
                    <term>1</term>
                    <direction>0</direction>
                </changeDirection>
                <wait>1</wait>
                <fire>
                    <bulletRef label="ring">
                        <param>$direction</param>
                    </bulletRef>
                </fire>
                <wait>60</wait>
            </action>
        </repeat>
    </action>
</bulletml>
